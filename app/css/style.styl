@import 'rupture'
@import "variable/_function.styl"
@import "variable/_default.styl"



.main-wrap-cont
	center(1030px,10px)
	font-size: 16px
	line-height: 1.4
	font-family:'PT Sans'
$yellow = #f4c800
$border-color = #d9d9d9
.type--up
	text-transform: uppercase
.type--mark
	color $yellow
.type--md
	font-size: 24px
.type--bold
	font-weight: 700
.b-banner-img
	margin-bottom: 70px
.b-section-title
	font-size: 28px
	font-weight: 700
	margin-bottom: 40px
.b-cause
	margin-bottom: 70px
.b-cause__el
	f()
	align-items center
.b-cause__numb
	font-weight:700
	color $yellow
	font-size: 72px
	margin-right: 25px
//.b-cause-content
.b-cause-content__title
	font-size: 20px
	up()
	font-weight: 700
.b-cause-content__text
	margin-top: 10px
	line-height: 1.4
.b-get-order
	margin-bottom: 70px
.b-get-order-img
	margin-bottom: 10px
.b-get-order-wrap
	f()
	justify-content space-between
.b-get-order__el
	width: 18%
	padding-left: 10px
.b-get-order__el-numb
	+above(640px)
		display none
//.b-get-order__el-text
.b-advant
	f()
	fw()
	justify-content space-between
	margin-bottom: 70px
.b-advant__el
	width: 48%
	f()
	margin-bottom: 40px
.b-advant__el-icon
	size 100px
	margin-right: 20px
.b-advant__el-info
	width calc(100% - 120px)
.b-advant__el-title
	font-size: 18px
	up()
	margin-bottom: 10px

.slider-el-wrap
	padding: 20px
	border 1px solid $border-color
.slider-partner__el
	background-size: contain
	background-repeat: no-repeat
	background-position: center center
	padding: 15% 10%
// slick
//Навигация снаружи
.slider-wrap--simple
	position relative
	.slider-control
		flex(mid)
		tr(all)
		size 40px
		background: white
		position: absolute
		top 50%
		margin-top: -20px
		z-index 10
		cp()
		&:hover
			background: $red
			.icon
				fill white
		.icon
			size 14px
	.slider-control--left
		left -60px
	.slider-control--right
		right -60px
//Навигация снаружи end

//Навигация внутри
.slider-wrap--inarrow
	.slider-control
		flex(mid)
		tr(all)
		position: absolute
		top 50%
		margin-top: -20px
		z-index 10
		padding: 20px 10px
		background: black
		cp()
		opacity: .6
		&:hover
			opacity: 1
			.icon
				fill white
		.icon
			fill white
			size 30px
	.slider-control--left
		left 0
	.slider-control--right
		right 0
//Навигация внутри
// === for custom navigation ===

//=== Внешний вид пагинации ===
.slick-dots
	+below(720px)
		bottom -20px
	width: 100%
	display: flex !important
	align-items: center
	justify-content: center
	bottom -50px
	li
		+below(720px)
			size 10px
			flex(mid)
	.dot
		+below(720px)
			flex(mid)
			size 6px
		background: $mark
		width: 20px
		height: 4px
		display: block
		br(3px)
		opacity: .5
	.slick-active
		.dot
			opacity: 1
//=== Внешний вид пагинации end===

// === Отступы для для слайдов ===
.slick-slide
	margin: 0 15px
.slick-list
	margin: 0 -15px
// === Отступы для для слайдов end ===
// slick === end


.b-invite
	margin: 70px 0
	padding: 50px 30px
	border 1px solid $border-color
	flex(mid)
	fl()
.b-invite__title
	font-size: 24px
	max-width 740px
	text-align center
	margin-bottom: 20px
.b-invite__get
	flex(mid)
	.b-btn
		margin-right: 20px
		&:last-child
			margin-right: 0
.b-btn
	padding: 15px 30px
	background: $yellow
	tr()
	text-decoration: none
	color black!important
	font-weight: 700
	font-size: 18px
	text-align center
	&:hover
		background: lighten($yellow,10)

.b-btn
	+below(640px)
		width: auto
	padding: 15px
	width: 300px

.b-btn--icon
	flex(mid)
	img
		width: 16px
		margin-left: 10px
.b-cert
	display: grid
	grid-gap 20px
	grid-template-columns: repeat(3, 1fr)
	margin-bottom: 70px
.b-cert__el
	f()
	align-items center
	text-decoration: none
	font-size: 20px
	img
		width: 80px
		margin-right: 20px
.b-article
	display: grid
	grid-gap 20px
	grid-template-columns: 1fr 1fr
	margin-bottom: 50px
.b-article__el
	padding: 20px
	border 1px solid $border-color
	color gray
	f()
	fl()
	&:first-child
		grid-area: 1 / 1 / 2 / 3
.b-article__el-wrap
	margin-bottom: 40px
.b-article__el-sub-title
	margin-bottom: 5 px
.b-article__el-title
	margin-bottom: 10px
	font-size: 18px
.b-article__el-sub-date
	margin-top auto
.b-btn-row-mid
	flex(mid)
	margin: 50px 0
